	"type": "module",
	"main": "./Target/Class/Resolve.js",
	"types": "./Target/Class/Resolve.d.ts",
	"bin": {
		"Resolve": "Target/Class/Resolve.js"
	},
	"files": [
		"dist/**"
	],
	"scripts": {
		"prebuild": "pnpm clean",
		"build": "tsc -p tsconfig.build.json && pnpm dev -p tsconfig.build.json",
		"clean": "rimraf dist coverage",
		"dev": "ts-node -r tsconfig-paths/register src/main.ts",
		"format": "prettier --write './src/**/*.ts'",
		"prepare": "husky install",
		"release": "pnpm test && pnpm release-it",
		"start": "node --trace-uncaught dist/main.js",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch"
	},
	"dependencies": {
		"ansi-colors": "4.1.3",
		"commander": "11.1.0",
		"fast-glob": "3.3.1"
	},
